<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package = "com.group53" />

    <bean class = "org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name = "prefix" value = "/WEB-INF/pages/" />
        <property name = "suffix" value = ".jsp" />
    </bean>
    <bean id="dbPopulator" class="org.springframework.jdbc.datasource.init.ResourceDatabasePopulator">
        <property name="separator" value="^;"/>
        <property name="scripts">
            <list>
                <value>WEB-INF/classes/schema.sql</value>
            </list>
        </property>
    </bean>
    <bean id="initDatabase" class="org.springframework.jdbc.datasource.init.DataSourceInitializer">
        <property name="dataSource" ref="dataSource"/>
        <property name="databasePopulator" ref="dbPopulator"/>
        <!-- The same can be done for the cleaner: -->
        <!-- <property name="databaseCleaner"><ref bean="dbCleanup"/></property> -->
    </bean>

    <bean id = "dataSource" class = "org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name = "driverClassName" value = "oracle.jdbc.driver.OracleDriver" />
        <property name = "url" value = "jdbc:oracle:thin:@localhost:1521:XE" />
        <property name = "username" value = "system" />
        <property name = "password" value = "12345678" />
    </bean>

    <bean id = "jdbcTemplate" class = "org.springframework.jdbc.core.JdbcTemplate">
        <property name = "dataSource" ref = "dataSource"/>
    </bean>

    <bean id = "subject_dao" class = "com.group53.dao.SubjectDAOImpl">
        <!--<property name = "template" ref = "jdbcTemplate"/>-->
    </bean>

    <bean id = "entity_dao" class = "com.group53.dao.EntityDAOImpl">
        <!--<property name = "template" ref = "jdbcTemplate"/>-->
    </bean>

    <bean id = "entity_param_dao" class = "com.group53.dao.EntityParameterDAOImpl">
        <!-- <property name = "template" ref = "jdbcTemplate"/>-->
    </bean>

    <bean id = "userDao" class = "com.group53.dao.UserDAOImpl">
        <!-- <property name = "template" ref = "jdbcTemplate"/> -->
    </bean>
    <bean id="userService" class="com.group53.dao.UserServiceImpl" />
</beans>